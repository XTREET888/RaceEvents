@{
    ViewData["Title"] = "Запись времени кругов";
    var events = ViewBag.Events as Microsoft.AspNetCore.Mvc.Rendering.SelectList;
    var eventEntity = ViewBag.Event as RaceEvents.Models.Event;
    var applications = ViewBag.Applications as List<RaceEvents.Models.Application>;
}

<h2>Запись времени кругов</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row mb-3">
    <div class="col-md-6">
        <form method="get" asp-action="Index">
            <div class="mb-3">
                <label for="eventId" class="form-label">Выберите событие:</label>
                <select name="eventId" id="eventId" class="form-select" onchange="this.form.submit()">
                    <option value="">-- Выберите событие --</option>
                    @if (events != null)
                    {
                        @foreach (var item in events)
                        {
                            <option value="@item.Value" selected="@(item.Selected ? "selected" : null)">@item.Text</option>
                        }
                    }
                </select>
            </div>
        </form>
    </div>
    <div class="col-md-6 text-end">
        @if (eventEntity != null)
        {
            <a asp-action="Create" asp-route-eventId="@eventEntity.Id" class="btn btn-primary">
                Записать время круга
            </a>
        }
    </div>
</div>

@if (eventEntity != null)
{
    <div class="card mb-3">
        <div class="card-header">
            <h5>@eventEntity.Title</h5>
            <small class="text-muted">@eventEntity.Date.ToString("dd.MM.yyyy HH:mm") - @eventEntity.Location</small>
        </div>
    </div>

    @if (applications != null && applications.Any())
    {
        <div class="mb-3">
            <form method="post" asp-action="CalculateResults" asp-route-eventId="@eventEntity.Id" onsubmit="return confirm('Вы уверены, что хотите рассчитать финальные результаты? Это обновит статистику участников.');" class="d-inline">
                <button type="submit" class="btn btn-success me-2">
                    Рассчитать финальные результаты (по времени)
                </button>
            </form>
            <a asp-action="SetManualPositions" asp-route-eventId="@eventEntity.Id" class="btn btn-primary">
                Задать места вручную
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Участник</th>
                        <th>Автомобиль</th>
                        <th>Круги</th>
                        <th>Лучшее время</th>
                        <th>Среднее время</th>
                        <th>Общее время</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var application in applications)
                    {
                        var lapTimes = application.LapTimes.OrderBy(lt => lt.LapNumber).ToList();
                        var bestLap = lapTimes.Any() ? lapTimes.Min(lt => lt.Time) : (TimeSpan?)null;
                        var totalTime = lapTimes.Any() ? lapTimes.Aggregate(TimeSpan.Zero, (sum, lt) => sum + lt.Time) : TimeSpan.Zero;
                        var averageLap = lapTimes.Any() ? TimeSpan.FromTicks(totalTime.Ticks / lapTimes.Count) : TimeSpan.Zero;

                        <tr>
                            <td>@application.Participant.LastName @application.Participant.FirstName</td>
                            <td>@application.Car.Brand @application.Car.Model (@application.Car.LicensePlate)</td>
                            <td>
                                @if (lapTimes.Any())
                                {
                                    <div>
                                        @foreach (var lap in lapTimes)
                                        {
                                            <span class="badge bg-secondary me-1">Круг @lap.LapNumber: @FormatTime(lap.Time)</span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">Нет записей</span>
                                }
                            </td>
                            <td>@(bestLap.HasValue ? FormatTime(bestLap.Value) : "-")</td>
                            <td>@(lapTimes.Any() ? FormatTime(averageLap) : "-")</td>
                            <td>@(lapTimes.Any() ? FormatTime(totalTime) : "-")</td>
                            <td>
                                <a asp-action="Create" asp-route-eventId="@eventEntity.Id" asp-route-applicationId="@application.Id" class="btn btn-sm btn-primary">
                                    Добавить круг
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Нет одобренных заявок для этого события.
        </div>
    }
}
else
{
    <div class="alert alert-info">
        Выберите событие для просмотра записей времени.
    </div>
}

@functions {
    private string FormatTime(TimeSpan timeSpan)
    {
        var totalMilliseconds = (long)timeSpan.TotalMilliseconds;
        var totalSeconds = (long)timeSpan.TotalSeconds;
        var milliseconds = totalMilliseconds % 1000;
        var tenths = milliseconds / 100;
        
        if (timeSpan.TotalHours >= 1)
        {
            var hours = (int)timeSpan.TotalHours;
            var minutes = timeSpan.Minutes;
            var seconds = timeSpan.Seconds;
            return $"{hours:D2}:{minutes:D2}:{seconds:D2}.{tenths}";
        }
        
        var mins = timeSpan.Minutes;
        var secs = timeSpan.Seconds;
        return $"{mins:D2}:{secs:D2}.{tenths}";
    }
}

