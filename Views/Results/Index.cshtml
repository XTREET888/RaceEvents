@model IEnumerable<RaceEvents.Models.Event>
@using RaceEvents.Models.Enums
@{
    ViewData["Title"] = "Результаты";
}

<h2>Результаты событий</h2>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Дата</th>
                    <th>Место</th>
                    <th>Статус</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Date.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@item.Location</td>
                        <td>
                            @(item.Status == EventStatus.IN_PROGRESS ? "В ПРОЦЕССЕ" :
                              item.Status == EventStatus.COMPLETED ? "ЗАВЕРШЕНО" : item.Status.ToString())
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                Просмотреть результаты
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        Пока нет событий с результатами.
    </div>
}

