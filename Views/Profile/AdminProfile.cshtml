@model RaceEvents.Models.Administrator
@{
    ViewData["Title"] = "Мой профиль";
    var eventsCount = (int)ViewBag.EventsCount;
    var championshipsCount = (int)ViewBag.ChampionshipsCount;
}

<div class="row">
    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header">
                <h4>Личная информация</h4>
            </div>
            <div class="card-body">
                <p><strong>Имя:</strong> @Model.FirstName @Model.LastName</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Отдел:</strong> @(Model.Department ?? "-")</p>
                <p><strong>Дата найма:</strong> @Model.HireDate.ToString("dd.MM.yyyy")</p>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header">
                <h4>Статистика</h4>
            </div>
            <div class="card-body">
                <p><strong>Созданных событий:</strong> @eventsCount</p>
                <p><strong>Созданных чемпионатов:</strong> @championshipsCount</p>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card mb-3">
            <div class="card-header">
                <h4>Мои события</h4>
            </div>
            <div class="card-body">
                @if (Model.Events.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Название</th>
                                    <th>Дата</th>
                                    <th>Место</th>
                                    <th>Статус</th>
                                    <th>Заявок</th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var eventItem in Model.Events.OrderByDescending(e => e.Date))
                                {
                                    <tr>
                                        <td>@eventItem.Title</td>
                                        <td>@eventItem.Date.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>@eventItem.Location</td>
                                        <td>
                                            <span class="badge bg-@(eventItem.Status == RaceEvents.Models.Enums.EventStatus.COMPLETED ? "success" : eventItem.Status == RaceEvents.Models.Enums.EventStatus.IN_PROGRESS ? "warning" : "info")">
                                                @eventItem.Status
                                            </span>
                                        </td>
                                        <td>@eventItem.Applications.Count</td>
                                        <td>
                                            <a asp-controller="Events" asp-action="Details" asp-route-id="@eventItem.Id" class="btn btn-sm btn-primary">Подробнее</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p>У вас пока нет событий. <a asp-controller="Events" asp-action="Create">Создать событие</a></p>
                }
            </div>
        </div>
    </div>
</div>


