@model IEnumerable<RaceEvents.Models.Championship>
@{
    ViewData["Title"] = "Чемпионаты";
    var isAdmin = (bool)(ViewBag.IsAdmin ?? false);
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Чемпионаты</h2>
    @if (isAdmin)
    {
        <a asp-action="Create" class="btn btn-primary">Создать чемпионат</a>
    }
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var championship in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">@championship.Title</h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(championship.Description))
                        {
                            <p class="card-text">@championship.Description</p>
                        }
                        <p class="mb-1"><strong>Период:</strong> @championship.StartDate.ToString("dd.MM.yyyy") - @championship.EndDate.ToString("dd.MM.yyyy")</p>
                        <p class="mb-1"><strong>Требуемый класс:</strong> @championship.RequiredCarClass</p>
                        <p class="mb-1"><strong>Минимум подиумов:</strong> @championship.MinPodiumsRequired</p>
                        <p class="mb-1"><strong>Событий:</strong> @championship.Events.Count</p>
                        <div class="mt-3">
                            <a asp-action="Details" asp-route-id="@championship.Id" class="btn btn-sm btn-primary">Подробнее</a>
                            @if (isAdmin)
                            {
                                <a asp-action="Edit" asp-route-id="@championship.Id" class="btn btn-sm btn-secondary">Редактировать</a>
                                <a asp-action="Delete" asp-route-id="@championship.Id" class="btn btn-sm btn-danger">Удалить</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <p>У вас пока нет чемпионатов. <a asp-action="Create">Создать первый чемпионат</a></p>
    </div>
}

