@model RaceEvents.Models.Championship
@using RaceEvents.Models.Enums
@{
    ViewData["Title"] = "Детали чемпионата";
    var isAdmin = (bool)(ViewBag.IsAdmin ?? false);
    var userId = Context.Session.GetInt32("UserId");
    var userRole = Context.Session.GetString("UserRole");
    var isParticipant = userRole == "PARTICIPANT";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>@Model.Title</h2>
    <div>
        @if (isAdmin)
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Редактировать</a>
        }
        <a asp-action="Index" class="btn btn-outline-secondary">Назад к списку</a>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-header">
                <h5>Информация о чемпионате</h5>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <p><strong>Описание:</strong> @Model.Description</p>
                }
                <p><strong>Дата начала:</strong> @Model.StartDate.ToString("dd.MM.yyyy HH:mm")</p>
                <p><strong>Дата окончания:</strong> @Model.EndDate.ToString("dd.MM.yyyy HH:mm")</p>
                <p><strong>Требуемый класс автомобиля:</strong> @Model.RequiredCarClass</p>
                <p><strong>Минимальное количество подиумов:</strong> @Model.MinPodiumsRequired</p>
                <p><strong>Создал:</strong> @Model.Administrator.FirstName @Model.Administrator.LastName</p>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>События чемпионата (@Model.Events.Count)</h5>
            </div>
            <div class="card-body">
                @if (Model.Events.Any())
                {
                    <div class="list-group">
                        @foreach (var eventItem in Model.Events.OrderBy(e => e.Date))
                        {
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">
                                            <a asp-controller="Events" asp-action="Details" asp-route-id="@eventItem.Id" class="text-decoration-none">
                                                @eventItem.Title
                                            </a>
                                        </h6>
                                        <p class="mb-1">@eventItem.Location</p>
                                        <small>
                                            @eventItem.Date.ToString("dd.MM.yyyy HH:mm") | 
                                            Статус: 
                                            @(eventItem.Status == EventStatus.UPCOMING ? "ПРЕДСТОЯЩЕЕ" :
                                              eventItem.Status == EventStatus.REGISTRATION_OPEN ? "РЕГИСТРАЦИЯ ОТКРЫТА" :
                                              eventItem.Status == EventStatus.IN_PROGRESS ? "В ПРОЦЕССЕ" :
                                              eventItem.Status == EventStatus.COMPLETED ? "ЗАВЕРШЕНО" :
                                              eventItem.Status == EventStatus.CANCELLED ? "ОТМЕНЕНО" : eventItem.Status.ToString())
                                        </small>
                                    </div>
                                    <div class="ms-3">
                                        @if (isParticipant && eventItem.Status == EventStatus.REGISTRATION_OPEN)
                                        {
                                            <a asp-controller="Applications" asp-action="Create" asp-route-eventId="@eventItem.Id" class="btn btn-sm btn-success">Подать заявку</a>
                                        }
                                        <a asp-controller="Events" asp-action="Details" asp-route-id="@eventItem.Id" class="btn btn-sm btn-outline-info">Подробнее</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted">В этом чемпионате пока нет событий.</p>
                }
            </div>
        </div>
    </div>
</div>

