@model RaceEvents.Models.Car
@{
    ViewData["Title"] = "Удалить автомобиль";
}

<h2>Удалить автомобиль</h2>

<h3>Вы уверены, что хотите удалить этот автомобиль?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Марка</dt>
        <dd class="col-sm-10">@Model.Brand</dd>

        <dt class="col-sm-2">Модель</dt>
        <dd class="col-sm-10">@Model.Model</dd>

        <dt class="col-sm-2">Класс</dt>
        <dd class="col-sm-10">@Model.CarClass</dd>

        <dt class="col-sm-2">Год</dt>
        <dd class="col-sm-10">@Model.Year</dd>

        <dt class="col-sm-2">Госномер</dt>
        <dd class="col-sm-10">@Model.LicensePlate</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>

